@{
  Layout = "_Layout";
}

<div class="container">
<h2>@Model["stylist"].GetName()</h2>
<h3>@Model["stylist"].GetName()'s clients</h3>
<ul>
@foreach (var client in Model["clients"])
{
<li>@client.GetName() <a href = "/clients/delete/@client.GetId()" class="btn btn-danger">Delete</a></li>
}

<a href = "/stylists/@Model["stylist"].GetId()/new">Add a client</a>

</ul>
</div>
